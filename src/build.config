#!/bin/sh -e
SYSTEM=$(uname -s)
SCRIPT=$(scripts/readlink.sh $0)
BASEDIR=$(dirname "${SCRIPT}")
BUILDDIR="$BASEDIR/build"

args=$(getopt d $*)
if test $? != 0; then
	echo "Usage: $0 [-d]"
	exit 1
fi

set -- $args

BUILD_TYPE=RELEASE

for i ; do
	case "$i" in
	
		-d|--debug)
			BUILD_TYPE=DEBUG
		;;
	
		--)
			break
		;;
	
		*)
			echo "Invalid Parameter: '$1'"
			exit 1
		;;
	esac
done
CMAKE_OPTIONS="-DCMAKE_BUILD_TYPE=${BUILD_TYPE}"

case $(uname -s) in
	Darwin)
	  for D in "/usr/local/opt/icu4c/"; do
			if [ -d "${D}" ]; then
				CMAKE_OPTIONS="${CMAKE_OPTIONS} -DICU_ROOT=${D}"
				break
			fi
		done
	;;
esac
